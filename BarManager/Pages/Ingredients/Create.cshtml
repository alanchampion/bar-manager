@page
@model BarManager.Pages.Ingredients.CreateModel

@{
    ViewData["Title"] = "New Ingredient";
}

<h1>New Ingredient</h1>

<h4>Ingredient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ingredient.Name" class="control-label"></label>
                <input asp-for="Ingredient.Name" class="form-control" />
                <span asp-validation-for="Ingredient.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingredient.PurchaseDate" class="control-label"></label>
                <input asp-for="Ingredient.PurchaseDate" class="form-control" value=@DateTime.Now />
                <span asp-validation-for="Ingredient.PurchaseDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ingredient.Favorite" /> @Html.DisplayNameFor(model => model.Ingredient.Favorite)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ingredient.Owned" /> @Html.DisplayNameFor(model => model.Ingredient.Owned)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Ingredient.Notes" class="control-label"></label>
                <textarea asp-for="Ingredient.Notes" class="form-control"></textarea>
                <span asp-validation-for="Ingredient.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
